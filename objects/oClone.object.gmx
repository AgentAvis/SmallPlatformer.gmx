    hsp = 0;
}
x += hsp * global.time;
//vertical collisions
if (place_meeting(x, y+vsp, oSolid)) {
    while (!place_meeting(x,y+sign(vsp),oSolid)){
        y += sign(vsp);
        playLandSound = true;
    }
    vsp = 0;
    if(playLandSound)
